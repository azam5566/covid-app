<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/P900</item>
        <item name="colorPrimaryDark">@color/P700</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/P900</item>
        <item name="colorPrimaryDark">@color/P700</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Text2" >
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text_active" >
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text3">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Buttons -->
    <style name="buttonText" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingLeft">@dimen/spacing4</item>
        <item name="android:paddingRight">@dimen/spacing4</item>
        <item name="android:paddingBottom">@dimen/spacing3</item>
        <item name="android:paddingTop">@dimen/spacing3</item>
        <item name="iconTint">@color/P900</item>
        <item name="iconSize">@dimen/iconSmall</item>
        <item name="android:textColor">@color/P900</item>
    </style>

    <style name="buttonFilled" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/P700</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="android:paddingLeft">@dimen/spacing4</item>
        <item name="android:paddingRight">@dimen/spacing4</item>
        <item name="android:paddingBottom">@dimen/spacing3</item>
        <item name="android:paddingTop">@dimen/spacing3</item>
        <item name="iconTint">@color/G000</item>
        <item name="iconSize">@dimen/iconSmall</item>
        <item name="android:textColor">@color/G000</item>
        <item name="cornerRadius">@dimen/spacing2</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">#2F0D1A</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">#fafafa</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#c7c7c7</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#d81b60</item>
        <item name="rippleColor">#ad1457</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#757575</item>
        <item name="rippleColor">#a4a4a4</item>
    </style>

</resources>