<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Total Cases between"
        android:textColor="#d81b60"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/cases_start"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/border_bottom_black"
        android:backgroundTint="#2F0D1A"
        android:backgroundTintMode="add"
        android:hint=""
        android:inputType="number"
        android:maxLength="10"
        android:paddingStart="@dimen/spacing0"
        android:paddingTop="@dimen/spacing2"
        android:paddingBottom="@dimen/spacing3"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="TO"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cases_start"
        app:layout_constraintEnd_toStartOf="@+id/cases_end"
        app:layout_constraintStart_toEndOf="@+id/cases_start" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/cases_end"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@drawable/border_bottom_black"
        android:backgroundTint="#2F0D1A"
        android:backgroundTintMode="add"
        android:hint=""
        android:inputType="number"
        android:maxLength="10"
        android:paddingStart="@dimen/spacing0"
        android:paddingTop="@dimen/spacing2"
        android:paddingBottom="@dimen/spacing3"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Total Deaths between"
        android:textColor="#d81b60"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cases_start" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/death_start"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/border_bottom_black"
        android:backgroundTint="#2F0D1A"
        android:backgroundTintMode="add"
        android:hint=""
        android:inputType="number"
        android:maxLength="10"
        android:paddingStart="@dimen/spacing0"
        android:paddingTop="@dimen/spacing2"
        android:paddingBottom="@dimen/spacing3"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="TO"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/death_start"
        app:layout_constraintEnd_toStartOf="@+id/death_end"
        app:layout_constraintStart_toEndOf="@+id/death_start" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/death_end"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@drawable/border_bottom_black"
        android:backgroundTint="#2F0D1A"
        android:backgroundTintMode="add"
        android:hint=""
        android:inputType="number"
        android:maxLength="10"
        android:paddingStart="@dimen/spacing0"
        android:paddingTop="@dimen/spacing2"
        android:paddingBottom="@dimen/spacing3"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/death_start"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Total Recovered between"
        android:textColor="#d81b60"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/death_start" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/recv_start"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/border_bottom_black"
        android:backgroundTint="#2F0D1A"
        android:backgroundTintMode="add"
        android:hint=""
        android:inputType="number"
        android:maxLength="10"
        android:paddingStart="@dimen/spacing0"
        android:paddingTop="@dimen/spacing2"
        android:paddingBottom="@dimen/spacing3"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView53"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="TO"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/recv_start"
        app:layout_constraintEnd_toStartOf="@+id/recv_end"
        app:layout_constraintStart_toEndOf="@+id/recv_start" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/recv_end"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/border_bottom_black"
        android:backgroundTint="#2F0D1A"
        android:backgroundTintMode="add"
        android:hint=""
        android:inputType="number"
        android:maxLength="10"
        android:paddingStart="@dimen/spacing0"
        android:paddingTop="@dimen/spacing2"
        android:paddingBottom="@dimen/spacing3"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView53"
        tools:ignore="RtlSymmetry" />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recv_start" />



</androidx.constraintlayout.widget.ConstraintLayout>